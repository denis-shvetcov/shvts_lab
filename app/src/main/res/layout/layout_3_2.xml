<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/id7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black"
            app:layout_constraintEnd_toStartOf="@id/vertical" />

        <ImageView
            android:id="@+id/id3"
            android:background="@color/teal_200"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintStart_toEndOf="@id/id7"
            app:layout_constraintTop_toBottomOf="@id/id7"
            app:layout_constraintBottom_toTopOf="@id/id6"/>

        <Button
            android:id="@+id/id6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertical"
            app:layout_constraintDimensionRatio="1:2"/>

        <TextView
            android:text="text"
            android:background="@color/teal_700"
            android:id="@+id/id4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/id3"
            app:layout_constraintStart_toStartOf="@id/id3"
            app:layout_constraintEnd_toEndOf="@id/id3"
            app:layout_constraintTop_toBottomOf="@id/id2"/>

        <CheckBox
            android:id="@+id/id2"
            android:checked="true"
            android:background="@color/purple_700"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/id7"
            app:layout_constraintEnd_toEndOf="@id/id3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/id4"/>

        <com.google.android.material.chip.Chip
            android:background="@color/black"
            android:id="@+id/id1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/id3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/id3"
            app:layout_constraintBottom_toBottomOf="@id/id3"/>

        <ProgressBar
            android:id="@+id/id5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/id3"
            app:layout_constraintTop_toBottomOf="@id/id3"
            app:layout_constraintDimensionRatio="1:2"
            android:background="@color/black"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>